<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".Uporabnik">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp">

            <TextView
                    android:text="Uporabnik"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/UporabniskoIme"
                    android:autoText="false"
                    android:layout_marginTop="20dp"
                    android:textSize="25dp"/>
        </RelativeLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <Button
                    android:text="Novi lov"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/adventure_map"
                    android:background="@drawable/gumbi"
            >

            </Button>
            <Button
                    android:text="Točke"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button2"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/dosezki"
                    android:background="@drawable/gumbi"
            />
            <Button
                    android:text="Dosežki"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button3"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/gumbi"
            />
            <Button
                    android:text="Izhod"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/button4"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/gumbi"
            />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>